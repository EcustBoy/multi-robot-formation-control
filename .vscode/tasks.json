{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "source /opt/ros/kinetic/setup.bash && catkin_make -DCMAKE_BUILD_TYPE=Debug",
            "args": [],
            "problemMatcher": [
                "$catkin-gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "source /opt/ros/kinetic/setup.bash &&catkin_make clean",
            "problemMatcher": [
                "$catkin-gcc"
            ]
        },
        {
            "type": "shell",
            "label": "release",
            "command": "source /opt/ros/kinetic/setup.bash && catkin_make -DCMAKE_BUILD_TYPE=Release",
            "problemMatcher": [
                "$catkin-gcc"
            ]
        }
    ]
}